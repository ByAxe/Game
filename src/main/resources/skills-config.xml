<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="fireBall" class="abilities.skills.destructive.FireBall">
		<constructor-arg value="Fire Ball" index="0"/>
		<constructor-arg value="Fire ball can cause a lot of damage to the enemy." index="1"/>
		<constructor-arg value="0" index="2"/>
		<constructor-arg value="20" index="3"/>
		<constructor-arg value="3" index="4"/>
		<constructor-arg value="20" index="5"/>
	</bean>

	<bean id="frostWave" class="abilities.skills.destructive.FrostWave">
		<constructor-arg value="Frost Wave" index="0"/>
		<constructor-arg value="Frost wave is very dangerous magic. Use it only if it necessary." index="1"/>
		<constructor-arg value="0" index="2"/>
		<constructor-arg value="100" index="3"/>
		<constructor-arg value="8" index="4"/>
		<constructor-arg value="50" index="5"/>
	</bean>

	<bean id="naturePower" class="abilities.skills.constructive.NaturePower">
		<constructor-arg value="Nature Power" index="0"/>
		<constructor-arg value="Take these power of the Nature and let it pass throughout your body." index="1"/>
		<constructor-arg value="60" index="2"/>
		<constructor-arg value="0" index="3"/>
		<constructor-arg value="5" index="4"/>
		<constructor-arg value="30" index="5"/>
	</bean>

	<bean id="plainHeal" class="abilities.skills.constructive.PlainHeal">
		<constructor-arg value="Plain Heal" index="0"/>
		<constructor-arg value="It's just a plain healing magic that everybody knows." index="1"/>
		<constructor-arg value="20" index="2"/>
		<constructor-arg value="0" index="3"/>
		<constructor-arg value="1" index="4"/>
		<constructor-arg value="10" index="5"/>
	</bean>

</beans>